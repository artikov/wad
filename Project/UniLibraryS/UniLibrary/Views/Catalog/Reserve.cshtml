@model UniLibrary.Models.CheckoutModels.CheckoutModel

<div class="container">
    <div class="page-header clearfix detailHeading">
        <h2 class="text-muted">Reserve Library Item</h2>
    </div>

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <p id="itemTitle">@Model.Title</p>
                    <img class="detailImage" src="@Model.ImageUrl" />
                </div>
            </div>
            <div class="col-md-9">
                <p>There are currently @Model.HoldCount reserves in the queue.</p>

                @using (Html.BeginForm("PlaceReserve", "Catalog", FormMethod.Post))
                {
                    @Html.HiddenFor(a=> a.KnigaId )
                    <div>
                        Please insert ID Card.
                        @Html.TextBoxFor(a=>a.IdCardId)
                    </div>
                    <div>
                        <button type="submit" class="btn btn-info btn-lg">Reserve</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>